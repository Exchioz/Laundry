<!-- list_item_jasa_order.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Display Jasa Name -->
    <TextView
        android:id="@+id/textViewJasaNameOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Jasa Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Display Jasa Price -->
    <TextView
        android:id="@+id/textViewJasaPriceOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="16sp" />

    <!-- Button to Decrease Jasa Count -->
    <Button
        android:id="@+id/btnDecrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-" />

    <!-- Display Jasa Count -->
    <TextView
        android:id="@+id/textViewJasaCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- Button to Increase Jasa Count -->
    <Button
        android:id="@+id/btnIncrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+" />

</LinearLayout>
