<!-- list_item_jasa_order.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="89dp"
            android:layout_height="68dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/sneakers"/>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewJasaNameOrder"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Nama jasa"/>


            <TextView
                android:id="@+id/textViewJasaPriceOrder"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Price"/>


        </LinearLayout>

        <ImageButton
            android:id="@+id/btnDecrease"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/minuss"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textViewJasaCount"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="2"
            android:textSize="16dp"/>

        <ImageButton
            android:id="@+id/btnIncrease"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pluss"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Duplikasi komponen ImageView, LinearLayout, dan lainnya di sini -->
        <!-- Ganti ID, gambar, teks, atau atribut lainnya sesuai kebutuhan -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
