<!-- list_item_jasa.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/centre_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewJasaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Jasa"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewJasaPrice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewJasaName"
        android:text="Rp. "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewJasaPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnDeleteJasa"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-24dp"
        android:layout_marginBottom="48dp"
        android:layout_toEndOf="@+id/textViewJasaPrice2"
        android:text="Harga"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnEditJasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewJasaPrice2"
        android:text="Edit" />

    <Button
        android:id="@+id/btnDeleteJasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewJasaPrice2"
        android:layout_toEndOf="@id/btnEditJasa"
        android:text="Hapus" />

</RelativeLayout>
